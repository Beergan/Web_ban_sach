@model QuanLySach.Areas.Admin.Models.LoginAdmin
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
	<title>Đăng Nhập</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
   
	<link rel="stylesheet" href="~/Admincess/loginadmin/scss/bootstrap/">
    <link href="~/admincess/loginadmin/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/Admincess/loginadmin/scss/style.scss">
    <link href="~/admincess/loginadmin/css/style.css" rel="stylesheet" />
</head>

<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Đăng Nhập</h2>
				</div>
			</div>
			
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" >
							<img src="~/Admincess/loginadmin/images/anhvuive.png" style="height:555px;display:flex;width:500px" />
						</div>

						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign In</h3>
								</div>
								
							</div>
							<form method="post" class="signin-form">
								<div asp-validation-summary="ModelOnly" ></div>
								<div class="form-group mb-3">
									<label class="label" for="name">Username</label>
									<input asp-for="UserName"  type="email" class="form-control" placeholder="Username" required>
									<span asp-validation-for="UserName" ></span>
								</div>
								<div class="form-group mb-3">
									<label class="label" for="password">Password</label>
									<input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
									<span asp-validation-for="Password" ></span>
								</div>
								
								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
									<p class ="mg-b-0">@ViewBag.Error</p>
								</div>
								<div class="form-group d-md-flex">
								
									<div class="w-50 text-md-right">
										<a href="#">Forgot Password</a>
									</div>
								</div>
							</form>
							<p class="text-center">Not a member? <a data-toggle="tab" href="#signup">Sign Up</a></p>

						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/Admincess/loginadmin/js/jquery.min.js"></script>
	<script src="~/Admincess/loginadmin/js/popper.js"></script>
	<script src="~/Admincess/loginadmin/js/bootstrap.min.js"></script>
	<script src="~/Admincess/loginadmin/js/main.js"></script>

</body>
</html>



