@model QuanLySach.ModelsView.MuaHangVM
@{
	ViewData["Title"] = "Mua hàng";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<QuanLySach.ModelsView.CartItemS> Carts = ViewBag.GioHang;
}
<div class="shop checkout section">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-12">
				<div class="checkout-form">
					<h2>Thông tin mua hàng</h2>
					<p>Vui vòng kiểm tra kỹ trước khi thành toán</p>
					<!-- Form -->
					<form asp-controller="Checkout" asp-action="Index"  class="form" method="post" >
						<input hidden asp-for="CustomerId" />
						<div class="row">
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>HỌ và tên<span>*</span></label>
									<input asp-for="FullName" type="text" >
								</div>
							</div>
						
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Địa ch<span>*</span></label>
									<input asp-for="Email" type="text">
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Số điện thoại<span>*</span></label>
									<input asp-for="Phone" type="text">
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Địa chỉ nhận hàng<span>*</span></label>
									<input asp-for="Address" type="text">
								</div>
							</div>
						@* 	<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Ghi chú<span>*</span></label>
									<input asp-for="Note" type="text" >
								</div>
							</div> *@
					
						</div>
						<div class="single-widget get-button">
							<div class="content">
								<div class="button">
									<input class="btn" style="background-color:black" value="XÁC NHẬN ĐẶT HÀNG" type="submit">
								</div>
							</div>
						</div>
						<!--/ End Button Widget -->
					</form>
					<!--/ End Form -->
				</div>
			</div>
			<div class="col-lg-4 col-12">
				<div class="order-details">
					<!-- Order Widget -->
					<div class="single-widget">
						<h2>Đơn Hàng</h2>
						<div class="content">
							<ul>
								@if ( Carts.Count() > 0)
								{
									foreach (var item in Carts)
									{
										<li>@item.product.ProductName<span>____@item.TotalMoney.ToString("#,##0")  VND</span><span>SL: @item.amount</span></li>
									}
					
								}
								
								<li>Tổng<span>@Carts.Sum(x=>x.TotalMoney).ToString("#,##0") VND</span></li>
								
								<li class="last">Tổng tiền<span>@Carts.Sum(x=>x.TotalMoney).ToString("#,##0") VND</span></li>
								
							</ul>
						</div>
					</div>
					<!--/ End Order Widget -->
					<!-- Order Widget -->
					<div class="single-widget">
						<h2>Phương thức thanh toán </h2>
						<div class="content">
							<div class="checkbox">
								<label class="checkbox-inline" for="1"><input name="updates" id="1" type="checkbox"> Khi Giao hàng</label>
								<label class="checkbox-inline" for="2"><input name="news" id="2" type="checkbox"> Cash On Delivery</label>
								<label class="checkbox-inline" for="3"><input name="news" id="3" type="checkbox"> PayPal</label>
							</div>
						</div>
					</div>
					<!--/ End Order Widget -->
					<!-- Payment Method Widget -->
					<div class="single-widget payement">
						<div class="content">
							<img src="images/payment-method.png" alt="#">
						</div>
					</div>
					<!--/ End Payment Method Widget -->
					<!-- Button Widget -->
					
				</div>
			</div>
		</div>
	</div>
</div>
