@model QuanLySach.Models.CharBst

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}

<form asp-controller="CharBsts" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="CharBstsName">Tên sản phẩm</label>
                        <input type="text" class="form-control" asp-for="CharName">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="CharBstsPrice">Giá bán</label>
                            <input type="text" class="form-control" asp-for="Price">
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="CharBstsCategory">Danh mục sản phẩm</label>
                            <select class="form-select form-select-sm" asp-for="ProductId" style="width: 200px;" asp-items="ViewBag.danhmuc">
                                <option value="" disabled selected>Chọn danh mục</option>
                            </select>
                            <label class="font-weight-semibold" for="CharBstsName">Hàng tồn kho</label>
                            <input type="text" class="form-control" asp-for="UnitsInStock">
                        </div>
                    </div>
                    <div class="FontDouble" style="height:50px">
                        <label class="font-weight-semibold" for="CharBstsBrand">Ảnh đại diện</label>
                        <input name="fThumb" type="file" class="font-weight-light" asp-for="Thumb" />
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="font-weight-semibold">
                            Thông tin chi tiết  </label>
                        <textarea class="editor1" id="editor1" rows="10" input name="Description" type="text" asp-for="Description"> </textarea>
                      
                    </div>
                    <div class="card-body">
                        <div class=form-group col-md-6">
                            <label class="font-weight-semibold" for="CharBstsSize">Title</label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>     
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" asp-for="Active" checked="">
                                    <label for="Active"></label>
                                </div>
                                <label>Public</label>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" asp-for="HomeFlag">
                                    <label for="HomeFlag"></label>
                                </div>
                                <label>HomeFlag</label>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" asp-for="BestSellers">
                                    <label for="BestSellers"></label>
                                </div>
                                <label>BestSellers</label>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
   
     
    </div>
</form>
@section Scripts{

    <script src="~/ckeditor1/ckeditor.js"></script>
<script>
        CKEDITOR.replace('editor1')
    
</script>
}